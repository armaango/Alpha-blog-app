<h1>Listing all articles</h1>
<p>
  <%= link_to "Create new article", new_article_path %>
</p>

<table>
  <tr>
    <th>
      Title
    </th>
    <th>
      Description
    </th>
  </tr>
  <% @articles.each do |art| %>
    <tr>
      <td>
        <%= art.title %>
      </td>
      <td>
        <%= art.description %>
      </td>
      <td>
        <%= link_to "Edit", edit_article_path(art) %>
      </td>
      <td>
        <%= link_to "Show", article_path(art) %>
      </td>
    </tr>
  <% end %>
</table>
